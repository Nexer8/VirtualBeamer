<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="305.0" prefWidth="507.0" style="-fx-background-color: #32566b;"
            stylesheets="@../styles/base.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.virtual.beamer.controllers.PresentationViewController">
    <top>
        <BorderPane style="-fx-background-color: #002d40;" BorderPane.alignment="CENTER">
            <left>
                <HBox>
                    <MenuBar>
                        <Menu mnemonicParsing="false" text="Navigate">
                            <MenuItem fx:id="loadPresentationButton" mnemonicParsing="false"
                                      onAction="#loadPresentation"
                                      text="Load presentation"/>
                            <MenuItem mnemonicParsing="false" onAction="#exitSession" text="Exit session"/>
                        </Menu>
                    </MenuBar>
                </HBox>
            </left>
            <right>
                <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="264.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="20.0"/>
                    </BorderPane.margin>
                    <ComboBox fx:id="participants" prefHeight="30.0" prefWidth="305.0" promptText="Participants"/>

                    <Button mnemonicParsing="false" onMousePressed="#loadPresentation" opacity="0.66" prefHeight="30.0"
                            prefWidth="273.0" text="Load">
                        <HBox.margin>
                            <Insets right="20.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </right>
        </BorderPane>
    </top>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <Pane fx:id="slidePane" prefHeight="230.0" prefWidth="437.0"/>
            <VBox fx:id="progressIndicator" alignment="CENTER" visible="false" StackPane.alignment="CENTER">
                <ProgressIndicator pickOnBounds="false" prefHeight="130.0" prefWidth="155.0">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </ProgressIndicator>
                <Label text="Waiting for the presentation to start..." textFill="WHITE"/>
            </VBox>
        </StackPane>
    </center>
    <left>
        <Button fx:id="previousSlideButton" disable="true" mnemonicParsing="false" onMouseClicked="#previousSlide"
                prefHeight="156.0" prefWidth="48.0" text="&lt;" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <Button fx:id="nextSlideButton" disable="true" mnemonicParsing="false" onMouseClicked="#nextSlide"
                prefHeight="156.0" prefWidth="48.0" text="&gt;" BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="305.0" style="-fx-background-color: #002d40;"
              BorderPane.alignment="CENTER">
            <TextField fx:id="presentationStatus" alignment="CENTER" disable="true" opacity="0.66" prefHeight="42.0"
                       prefWidth="165.0" visible="false"/>
        </HBox>
    </bottom>
</BorderPane>
